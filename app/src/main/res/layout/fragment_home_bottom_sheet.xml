<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.common.HomeBottomSheetFragment">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

        <View
            android:id="@+id/v_create_class"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_join_class"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/v_create_class" />

        <TextView
            android:id="@+id/tv_create_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/create_class"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/v_create_class"
            app:layout_constraintStart_toStartOf="@id/v_create_class"
            app:layout_constraintTop_toTopOf="@id/v_create_class" />

        <TextView
            android:id="@+id/tv_join_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/join_class"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/v_join_class"
            app:layout_constraintStart_toStartOf="@id/v_join_class"
            app:layout_constraintTop_toTopOf="@id/v_join_class" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

